            console.log('åŠ è½½è¯¾ç¨‹è¯¦æƒ…, ID:', courseId);
            console.log('APIç«¯ç‚¹:', `${API_BASE}/courses/${courseId}`);

            // è·å–è¯¾ç¨‹è¯¦æƒ…ï¼ˆè®¾ç½®5ç§’è¶…æ—¶ï¼‰
            const response = await fetchWithTimeout(`${API_BASE}/courses/${courseId}`, {
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem('token') || ''}`,
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            }, 5000).catch(error => {
                console.error('ç½‘ç»œè¯·æ±‚é”™è¯¯:', error);
                throw new Error('ç½‘ç»œè¿æ¥å¤±è´¥ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè®¾ç½®');
            });

            if (!response) {
                throw new Error('æ— æ³•è¿æ¥åˆ°æœåŠ¡å™¨');
            }

            console.log('å“åº”çŠ¶æ€:', response.status, response.statusText);

            if (!response.ok) {
                if (response.status === 404) {
                    throw new Error('è¯¾ç¨‹ä¸å­˜åœ¨');
                } else if (response.status === 401) {
                    throw new Error('è¯·å…ˆç™»å½•');
                } else if (response.status === 500) {
                    throw new Error('æœåŠ¡å™¨é”™è¯¯');
                } else {
                    throw new Error(`è·å–è¯¾ç¨‹å¤±è´¥: ${response.status}`);
                }
            }

            const data = await response.json();

            if (data.success && data.data) {
                // æ–°çš„APIå“åº”æ ¼å¼åŒ…å«courseã€chaptersã€accessç­‰
                const responseData = data.data;
                currentCourse = responseData.course || responseData; // å…¼å®¹æ–°æ—§æ ¼å¼
                
                // å­˜å‚¨ç« èŠ‚å’Œæƒé™ä¿¡æ¯
                window.courseChapters = responseData.chapters || [];
